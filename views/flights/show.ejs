<%- include("../partials/html-head") %> 

<link rel="stylesheet" href="/stylesheets/style.css">

<%- include("../partials/nav") %> 
<main>
  <h1>Flight <%=flight.flightNo%>: Details</h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departure Time</th>
        <th>Status</th>
      </tr>
    </thead>
      <tr
      <% if(flight.departs < new Date()) { %>
        class='departed' 
        <% } %>
        >
        <td><%=flight.airline%></td>
        <td><%=flight.airport%></td>
        <td><%=flight.flightNo%></td>
        <td>
          <%=flight.departs.toLocaleString([], {year: 'numeric', month: 'numeric', day: 'numeric', hour: '2-digit', minute: '2-digit', timeZoneName:'short'})%>
        </td>
        <td> <%= (flight.departs < new Date()) ? "Departed" : "Not Departed" %>
        </td>
      </tr>
    </tbody>
  </table>
  <form
  id='add-ticket-form'
  action='/flights/<%=flight.id%>/tickets'
  method='POST'
  >
  <h2>Add Ticket</h2>
  <label>Seat Number
    <input name='seat'>
  </label><br>
  <label>Price
    <input name='price'>
  </label><br>
  <button type='submit'>Add</button>
  </form>
  <h3>Tickets</h3>
<% if(flight.tickets.length) {%>
  <table class="table">
    <thead>
      <tr>
        <th>Seat Number</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% flight.tickets.forEach(t => { %>
        <tr>
          <td><%=t.seat%></td>
          <td><%=t.price%></td>
        </tr>
      <%})%>
    </tbody>
  </table>
<% } else { %> <h4>No Tickets Added</h4> <% } %> 
</main>
<%- include("../partials/footer") %> 