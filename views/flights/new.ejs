<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <title>Document</title>
</head>
<body>
  <h1>Add New Flight</h1>
  <form
    action = '/flights'
    method = 'POST'>
    <label>Airline
      <select name='airline'>
        <option value="default"></option>
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
      </select>
    </label><br>
    <label>Airport
      <select name='airport'>
        <option value="DEN">DEN</option>
        <option value="AUS">AUS</option>
        <option value="DFW">DWF</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>
    </label><br>
    <label>Flight Number
      <input type='text' name='flightNo'>
    </label><br>
    <label>Departure Date
      <% const localeDate = new Date(new Date().setFullYear(new Date().getFullYear() + 1)).toLocaleString([], {year: 'numeric', month: 'numeric', day: 'numeric', hour: '2-digit', minute: '2-digit', second: '2-digit'}) %>
      <% const month = localeDate.substring(0,2) %>
      <% const day = localeDate.substring(3,5) %>
      <% const year = localeDate.substring(6,10) %>
      <% const time = localeDate.substring(12,18) %>
      <% const localeDefault = `${year}-${month}-${day}T${time}00` %>
      <input type='datetime-local' name='departs' value='<%=localeDefault%>'>
    </label><br>
    <button type="submit">Add Flight</button>
  </form>
</body>
</html>